  "version": "0.2.0",
  "configurations": [
    {
      "name": "Actual Sim (PyBullet GUI)",
      "type": "debugpy",
      "request": "launch",
      "module": "sim.actual_sim",
      "justMyCode": true,
      "args": ["--real-time"]
    },
    {
      "name": "Quick Run (run_gui)",
      "type": "debugpy",
      "request": "launch",
      "module": "sim.run_gui",
      "justMyCode": true,
      "args": ["--gui", "--sliders", "--real-time"]
    },
    {
      "name": "Qt Viewer (headless + camera)",
      "type": "debugpy",
      "request": "launch",
      "module": "sim.qt_viewer",
      "justMyCode": true
    }
  ]
}
